<!-- views/dashboard/student.ejs -->


<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-3">
            <%- include('../partials/sidebar') %>
        </div>
        
        <div class="col-md-9">
            <h2><i class="fas fa-tachometer-alt"></i> Student Dashboard</h2>
            
            <div class="row mt-4">
                <!-- Mental Health Status Card -->
                <div class="col-md-4 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Mental Health Status</h6>
                                    <h3 class="mb-0">Good</h3>
                                </div>
                                <div>
                                    <i class="fas fa-heart fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Upcoming Appointments Card -->
                <div class="col-md-4 mb-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Upcoming Appointments</h6>
                                    <h3 class="mb-0"><%= upcomingAppointments.length %></h3>
                                </div>
                                <div>
                                    <i class="fas fa-calendar fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Recent Assessments Card -->
                <div class="col-md-4 mb-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Assessments Taken</h6>
                                    <h3 class="mb-0"><%= recentAssessments.length %></h3>
                                </div>
                                <div>
                                    <i class="fas fa-clipboard-list fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            