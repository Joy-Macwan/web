<!-- views/index.ejs -->

<div class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">You're Not Alone</h1>
                <p class="lead mb-4">
                    Confidential, accessible mental health support designed specifically for students. 
                    Get help when you need it, how you need it.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="/chat" class="btn btn-light btn-lg">
                        <i class="fas fa-comments"></i> Start Chat Support
                    </a>
                    <% if (!user) { %>
                        <a href="/auth/register" class="btn btn-outline-light btn-lg">Get Started</a>
                    <% } else { %>
                        <a href="/dashboard" class="btn btn-outline-light btn-lg">Go to Dashboard</a>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="/images/mental-health-hero.svg" alt="Mental Health Support" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2>How We Support You</h2>
            <p class="text-muted">Multiple ways to get help, all confidential and designed for students</p>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-robot fa-3x text-primary"></i>
                    </div>
                    <h5>AI First-Aid Chat</h5>
                    <p class="small text-muted">24/7 immediate support with coping strategies and professional referrals when needed</p>
                    <a href="/chat" class="btn btn-outline-primary btn-sm">Try Now</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-calendar-check fa-3x text-success"></i>
                    </div>
                    <h5>Confidential Booking</h5>
                    <p class="small text-muted">Schedule appointments with campus counselors anonymously and securely</p>
                    <% if (user) { %>
                        <a href="/appointments/book" class="btn btn-outline-success btn-sm">Book Now</a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-outline-success btn-sm">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-book-open fa-3x text-info"></i>
                    </div>
                    <h5>Resource Library</h5>
                    <p class="small text-muted">Videos, audio guides, and wellness resources in multiple languages</p>
                    <a href="/resources" class="btn btn-outline-info btn-sm">Explore</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-warning"></i>
                    </div>
                    <h5>Peer Support</h5>
                    <p class="small text-muted">Connect with other students in moderated, safe community discussions</p>
                    <a href="/forum" class="btn btn-outline-warning btn-sm">Join Community</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Assessment Tools -->
    <div class="row mb-5 bg-light rounded p-4">
        <div class="col-12 text-center mb-4">
            <h3>Mental Health Screening Tools</h3>
            <p class="text-muted">Confidential self-assessments to help understand your mental health</p>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">PHQ-9 Depression</h5>
                    <p class="card-text small">Assess symptoms of depression with this validated screening tool</p>
                    <% if (user) { %>
                        <a href="/assessments/phq9" class="btn btn-primary btn-sm">Take Assessment</a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-sm">Register to Access</a>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">GAD-7 Anxiety</h5>
                    <p class="card-text small">Screen for generalized anxiety disorder symptoms</p>
                    <% if (user) { %>
                        <a href="/assessments/gad7" class="btn btn-primary btn-sm">Take Assessment</a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-sm">Register to Access</a>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">GHQ-12 General Health</h5>
                    <p class="card-text small">Overall psychological well-being assessment</p>
                    <% if (user) { %>
                        <a href="/assessments/ghq" class="btn btn-primary btn-sm">Take Assessment</a>
                    <% } else { %>
                        <a href="/auth/register" class="btn btn-primary btn-sm">Register to Access</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Statistics or Testimonials -->
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h3>Making a Difference</h3>
        </div>
        
        <div class="col-md-3 text-center mb-3">
            <div class="display-4 text-primary fw-bold">24/7</div>
            <p>Available Support</p>
        </div>
        
        <div class="col-md-3 text-center mb-3">
            <div class="display-4 text-success fw-bold">100%</div>
            <p>Confidential</p>
        </div>
        
        <div class="col-md-3 text-center mb-3">
            <div class="display-4 text-info fw-bold">Free</div>
            <p>For All Students</p>
        </div>
        
        <div class="col-md-3 text-center mb-3">
            <div class="display-4 text-warning fw-bold">Safe</div>
            <p>Environment</p>
        </div>
    </div>
</div>
