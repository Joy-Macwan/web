
<!-- views/assessments/phq9.ejs -->


<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3><i class="fas fa-clipboard-list"></i> PHQ-9 Depression Assessment</h3>
                    <p class="mb-0">Over the last 2 weeks, how often have you been bothered by any of the following problems?</p>
                </div>
                <div class="card-body">
                    <form action="/assessments/phq9" method="POST" id="phq9Form">
                        <% questions.forEach((question, index) => { %>
                            <div class="question-block mb-4 p-3 border rounded">
                                <h6><%= index + 1 %>. <%= question %></h6>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   name="answers[<%= index %>]" value="0" id="q<%= index %>_0" required>
                                            <label class="form-check-label" for="q<%= index %>_0">
                                                Not at all (0)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   name="answers[<%= index %>]" value="1" id="q<%= index %>_1">
                                            <label class="form-check-label" for="q<%= index %>_1">
                                                Several days (1)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   name="answers[<%= index %>]" value="2" id="q<%= index %>_2">
                                            <label class="form-check-label" for="q<%= index %>_2">
                                                More than half the days (2)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   name="answers[<%= index %>]" value="3" id="q<%= index %>_3">
                                            <label class="form-check-label" for="q<%= index %>_3">
                                                Nearly every day (3)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Privacy Notice:</strong> Your responses are confidential and will be used only 
                            to provide you with personalized support and resources.
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check"></i> Submit Assessment
                            </button>
                            <a href="/assessments" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
